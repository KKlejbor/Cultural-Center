@model Cultural_Center.Models.Enrollments

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Enrollments</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentGroup)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentGroup.Id),
            @Html.DisplayFor(model => model.StudentGroup.DayOfTheWeek),
            @Html.DisplayFor(model => model.StudentGroup.StartTime),
            @Html.DisplayFor(model => model.StudentGroup.LessonsId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.Id),
            @Html.DisplayFor(model => model.Student.FirstName),
            @Html.DisplayFor(model => model.Student.LastName),
            @Html.DisplayFor(model => model.Student.PhoneNumber),
            @Html.DisplayFor(model => model.Student.Address),
            @Html.DisplayFor(model => model.Student.City),
            @Html.DisplayFor(model => model.Student.Postcode),
            @Html.DisplayFor(model => model.Student.EmailAddress)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { StudentGroupsId = Model.StudentGroupsId, StudentsId = Model.StudentsId }) |
    <a asp-action="Index">Back to List</a>
</div>
